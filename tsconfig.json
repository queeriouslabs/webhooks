{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "isolatedModules": false,
        "noImplicitUseStrict": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noLib": false,
        "outDir": "build"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": [
        "src/**/*"
    ],
}
